<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.gather_excellent_help.ui.widget.MyNestedScrollView
            android:id="@+id/mynested_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000">

                    <include layout="@layout/component_home_banner" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x15"
                        android:layout_marginLeft="@dimen/x12"
                        android:layout_marginRight="@dimen/x12"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_home_sousuo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/home_sousuo_white_shape"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/x6">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x3"
                                android:src="@drawable/home_search_circle_icon" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x6"
                                android:layout_weight="1"
                                android:text="请输入关键字查询"
                                android:textColor="#999999"
                                android:textSize="@dimen/x12" />

                            <LinearLayout
                                android:id="@+id/ll_home_update_scanner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x3"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/home_scanner_circle_icon" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_home_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/x18"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/home_msg_circle_icon" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/x2"
                                android:text="消息"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x8" />

                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="#EFEFEF" />

                <include layout="@layout/component_home_type" />

                <include layout="@layout/home_vip_zera" />

                <include layout="@layout/home_qiang_zera" />

                <include layout="@layout/home_group_zera" />

                <include layout="@layout/gray_line9" />

                <!--活动版块-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_home_activity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

                <include layout="@layout/gray_line9" />

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/rl_item_laod_more"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x36"
                    android:paddingLeft="@dimen/x8"
                    android:paddingRight="@dimen/x8">

                    <View
                        android:id="@+id/v_type_line"
                        android:layout_width="@dimen/x3"
                        android:layout_height="@dimen/x16"
                        android:layout_centerVertical="true"
                        android:background="#fa2d3b" />

                    <TextView
                        android:id="@+id/tv_item_home_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x7"
                        android:text="新品/热销排行榜"
                        android:textColor="#333333"
                        android:textSize="@dimen/x16"
                        android:textStyle="bold" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#EFEFEF" />

                <!--活动列表-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_home_activity_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#fff"></android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </com.gather_excellent_help.ui.widget.MyNestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <ImageView
        android:id="@+id/iv_home_back_top"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/x40"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/x18"
        android:layout_marginRight="@dimen/x6"
        android:src="@drawable/home_back_top" />

    <LinearLayout
        android:id="@+id/ll_home_loadmore"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_alignParentBottom="true"
        android:background="#88000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载更多..."
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>

