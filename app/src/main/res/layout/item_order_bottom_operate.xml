<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x40"
    android:background="#ffffff">
    <TextView
        android:id="@+id/tv_order_right_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x3"
        android:text="立即支付"
        android:textSize="12sp"
        android:textColor="#99ff0000"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x8"
        android:background="@drawable/red_cordor_stroke_shape"/>
    <TextView
        android:id="@+id/tv_order_right_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x3"
        android:text="取消订单"
        android:textSize="12sp"
        android:textColor="#55000000"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_order_right_first"
        android:layout_marginRight="@dimen/x8"
        android:background="@drawable/gray_cordor_stroke_shape"/>
    <TextView
        android:id="@+id/tv_order_right_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/x3"
        android:text="朋友代付"
        android:textSize="12sp"
        android:textColor="#55000000"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_order_right_second"
        android:layout_marginRight="@dimen/x8"
        android:background="@drawable/gray_cordor_stroke_shape"/>

</RelativeLayout>