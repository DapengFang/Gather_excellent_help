<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical">

    <include layout="@layout/top_zhuangai_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="#eeeeee"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_account_query_time"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x30"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/amount_details_selector"
            android:gravity="center"
            android:text="按时间"
            android:textColor="@drawable/amount_text_selector"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_account_query_project"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x30"
            android:layout_marginLeft="@dimen/x15"
            android:background="@drawable/amount_details_selector"
            android:gravity="center"
            android:text="按项目"
            android:textColor="@drawable/amount_text_selector"
            android:textSize="14sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">

        <com.gather_excellent_help.ui.widget.WanRecycleView
            android:id="@+id/wan_account_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:paddingLeft="@dimen/x8"
            android:paddingRight="@dimen/x8" />

        <include layout="@layout/load_no_zhanwei" />

    </FrameLayout>


</LinearLayout>
