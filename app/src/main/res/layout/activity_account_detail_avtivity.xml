<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb">

    <include layout="@layout/top_zhuangai_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="日期"
            android:textSize="14sp"
            android:textColor="#88000000"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="项目"
            android:textSize="14sp"
            android:textColor="#88000000"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="发生金额"
            android:textSize="14sp"
            android:textColor="#88000000"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#11000000"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#eeeeee">
        <TextView
            android:id="@+id/tv_account_query_time"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x30"
            android:text="按时间"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x10"
            android:textColor="@drawable/amount_text_selector"
            android:background="@drawable/amount_details_selector"/>
        <TextView
            android:id="@+id/tv_account_query_project"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x30"
            android:text="按项目"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x15"
            android:textColor="@drawable/amount_text_selector"
            android:background="@drawable/amount_details_selector"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee">

        <com.gather_excellent_help.ui.widget.WanRecycleView
            android:id="@+id/wan_account_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:paddingLeft="@dimen/x8"
            android:paddingRight="@dimen/x8"></com.gather_excellent_help.ui.widget.WanRecycleView>

        <ImageView
            android:id="@+id/iv_order_no_zhanwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x60"
            android:src="@drawable/juyoubang_no_zhanwei"
            android:visibility="gone"/>

    </FrameLayout>


</LinearLayout>
