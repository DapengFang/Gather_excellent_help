<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x120"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/x10">

    <ImageView
        android:id="@+id/iv_suning_order_ware"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:src="@mipmap/zhanwei_icon" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_suning_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text=""
            android:textColor="#808080"
            android:textSize="@dimen/x10" />

        <TextView
            android:id="@+id/tv_suning_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_suning_order_title"
            android:layout_marginTop="@dimen/x3"
            android:text=""
            android:textColor="#aaaaaa"
            android:textSize="@dimen/x10" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/x60"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x10">

        <TextView
            android:id="@+id/tv_suning_order_realprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="#333333"
            android:textSize="@dimen/x10" />

        <TextView
            android:id="@+id/tv_suning_order_oldprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_suning_order_realprice"
            android:layout_marginTop="@dimen/x3"
            android:text=""
            android:textColor="#aaaaaa"
            android:textSize="@dimen/x10" />

        <TextView
            android:id="@+id/tv_suning_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_suning_order_oldprice"
            android:text=""
            android:textColor="#aaaaaa"
            android:textSize="@dimen/x10" />

    </RelativeLayout>


</LinearLayout>