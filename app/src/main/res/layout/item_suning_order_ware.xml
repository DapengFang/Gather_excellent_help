<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x120"
    android:padding="@dimen/x10"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_suning_order_ware"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:src="@mipmap/juyoubangs" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x10">

        <TextView
            android:id="@+id/tv_suning_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鸟笼取暖节能电暖气台式电暖炉家用电暖器办公室小太阳烤火炉"
            android:textColor="#555555"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_suning_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜色分类：大号、黑色"
            android:textSize="12sp"
            android:textColor="#aaaaaa"
            android:layout_below="@id/tv_suning_order_title"
            android:layout_marginTop="@dimen/x3"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/x60"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x10">

        <TextView
            android:id="@+id/tv_suning_order_realprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥28.90"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_suning_order_oldprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥66.99"
            android:textSize="12sp"
            android:textColor="#aaaaaa"
            android:layout_marginTop="@dimen/x3"
            android:layout_below="@id/tv_suning_order_realprice"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_suning_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textSize="12sp"
            android:textColor="#aaaaaa"
            android:layout_below="@id/tv_suning_order_oldprice"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</LinearLayout>