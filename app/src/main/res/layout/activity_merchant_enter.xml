<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gather_excellent_help.ui.activity.credits.MerchantEnterActivity">

    <include layout="@layout/top_zhuangai_bar" />

    <com.gather_excellent_help.ui.widget.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#11000000"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="@dimen/x15"
                    android:layout_marginLeft="@dimen/x7"
                    android:background="#eeff0000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x7"
                    android:layout_weight="1"
                    android:text="基本信息"
                    android:textColor="#ee000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="省/市/区/县/乡："
                    android:textColor="#99000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_merchant_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入详细地址"
                    android:textColorHint="#55000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#ffffff">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#11000000"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="店铺简介："
                    android:textColor="#99000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_merchant_shopinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入店铺简介"
                    android:textColorHint="#55000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#ffffff">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#11000000"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="电话："
                    android:textColor="#99000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_merchant_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入电话号码"
                    android:textColorHint="#55000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#ffffff">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#11000000"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="店名："
                    android:textColor="#99000000"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_merchant_shopname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入店名"
                    android:textColorHint="#55000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#ffffff">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#11000000"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#ffffff">
                <ImageView
                    android:layout_width="@dimen/x12"
                    android:layout_height="@dimen/x12"
                    android:src="@drawable/shop_time_icon"
                    android:layout_marginLeft="@dimen/x10"/>
                <TextView
                    android:layout_width="@dimen/x90"
                    android:layout_height="wrap_content"
                    android:text="营业时间"
                    android:textSize="12sp"
                    android:textColor="#99000000"
                    android:paddingLeft="@dimen/x10"/>
                <TextView
                    android:id="@+id/tv_shop_time_am"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早上9:00"
                    android:textSize="12sp"
                    android:textColor="#55000000" />
                <TextView
                    android:layout_width="@dimen/x10"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#55000000" />

                <TextView
                    android:id="@+id/tv_shop_time_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晚上18:00"
                    android:textSize="12sp"
                    android:textColor="#55000000" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_merchant_brand_expand"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x7">

                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="@dimen/x15"
                    android:layout_marginLeft="@dimen/x7"
                    android:background="#eeff0000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x7"
                    android:layout_weight="1"
                    android:text="主营品牌"
                    android:textColor="#ee000000"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="@dimen/x45"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_merchant_brand_arraw"
                        android:layout_width="@dimen/x9"
                        android:layout_height="@dimen/x9"
                        android:layout_centerInParent="true"
                        android:src="@drawable/down_black_arraw" />

                </RelativeLayout>

            </LinearLayout>

            <com.gather_excellent_help.ui.widget.MyGridView
                android:id="@+id/gv_merchant_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:numColumns="4"
                android:padding="@dimen/x3"></com.gather_excellent_help.ui.widget.MyGridView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#11000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_merchant_brand_cannel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#55000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_merchant_brand_commit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#eeff0000"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x7">

                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="@dimen/x15"
                    android:layout_marginLeft="@dimen/x7"
                    android:background="#eeff0000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x7"
                    android:layout_weight="1"
                    android:text="店铺信息"
                    android:textColor="#ee000000"
                    android:textSize="16sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/x7"
                    android:text="门头照片"
                    android:textColor="#99000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_merchant_choice1"
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="@dimen/x7"
                    android:background="@drawable/item_merchant_choicepic_shape"
                    android:gravity="center"
                    android:text="选择图片"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#11000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/iv_merchant_picture_l1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/x5"
                    android:src="@mipmap/merchant_default_s2"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/x7"
                    android:text="店铺产品陈列照片"
                    android:textColor="#99000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_merchant_choice2"
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="@dimen/x7"
                    android:background="@drawable/item_merchant_choicepic_shape"
                    android:gravity="center"
                    android:text="选择图片"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#11000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_merchant_picture_l2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/x5"
                    android:layout_weight="1"
                    android:src="@mipmap/merchant_default_s1"/>

                <ImageView
                    android:id="@+id/iv_merchant_picture_l3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/x5"
                    android:layout_weight="1"
                    android:src="@mipmap/merchant_default_s1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/x7"
                    android:text="营业执照"
                    android:textColor="#99000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_merchant_choice3"
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="@dimen/x7"
                    android:background="@drawable/item_merchant_choicepic_shape"
                    android:gravity="center"
                    android:text="选择图片"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#11000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/iv_merchant_picture_l4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/x5"
                    android:src="@mipmap/merchant_default_s2"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_merchant_last_next"
                android:layout_width="@dimen/x240"
                android:layout_height="@dimen/x40"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/x30"
                android:layout_marginTop="@dimen/x50"
                android:background="@drawable/register_confirm_selector"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </com.gather_excellent_help.ui.widget.MyNestedScrollView>

</LinearLayout>
