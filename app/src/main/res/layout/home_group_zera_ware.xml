<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_group_right_ware"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x80"
    android:orientation="vertical"
    android:paddingRight="@dimen/x2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!--大图区域-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:paddingRight="@dimen/x4">

            <ImageView
                android:id="@+id/iv_group_ware_img"
                android:layout_width="@dimen/x55"
                android:layout_height="@dimen/x55"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <!--小商品区域-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x1"
            android:paddingTop="@dimen/x6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x32">

                <TextView
                    android:id="@+id/tv_group_ware_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="@dimen/x2"
                    android:lines="2"
                    android:textColor="#333333"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/tv_activity_sun_tao_icon"
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/x13"
                    android:layout_marginTop="@dimen/x2"
                    android:background="@drawable/sun_tao_icon_selector"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@drawable/sun_tao_text_selector"
                    android:textSize="@dimen/x8"
                    android:visibility="gone"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/x4"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_group_ware_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textColor="#FA2D3B"
                    android:textSize="@dimen/x13"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/x5"
                    android:text="现价"
                    android:textColor="#55000000"
                    android:textSize="@dimen/x9" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x16">

        <LinearLayout
            android:id="@+id/ll_group_ware_zhuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x12"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/x3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_group_ware_zhuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="#ff6600"
                android:textSize="@dimen/x8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/x1"
                android:text="赚"
                android:textColor="#ff6600"
                android:textSize="@dimen/x4" />

            <TextView
                android:id="@+id/tv_group_ware_coast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/x2"
                android:textColor="#ff6600"
                android:textSize="@dimen/x8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/x1"
                android:text="成本"
                android:textColor="#ff6600"
                android:textSize="@dimen/x4" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_group_ware_coupon"
            android:layout_width="@dimen/x52"
            android:layout_height="@dimen/x12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/activity_list_red_shape"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/x6"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>