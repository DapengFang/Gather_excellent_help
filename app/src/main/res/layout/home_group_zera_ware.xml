<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_group_right_ware"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/iv_group_ware_img"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:layout_centerInParent="true" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x6"
        android:paddingRight="@dimen/x6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_group_ware_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/x3"
                android:lines="2"
                android:textColor="#333333"
                android:textSize="@dimen/x12" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="付款价"
                android:textColor="#808080"
                android:textSize="@dimen/x10" />

            <TextView
                android:id="@+id/tv_group_ware_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/x2"
                android:textColor="#fa2a3b"
                android:textSize="@dimen/x14" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/ll_group_ware_zhuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_group_ware_coast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/x4"
                    android:textColor="#474747"
                    android:textSize="@dimen/x10" />

                <TextView
                    android:id="@+id/tv_group_ware_zhuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/x4"
                    android:textColor="#ff6600"
                    android:textSize="@dimen/x10" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_activity_group_coupon"
                android:layout_width="@dimen/x48"
                android:layout_height="@dimen/x16"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/activity_list_red_shape">

                <TextView
                    android:layout_width="@dimen/x16"
                    android:layout_height="match_parent"
                    android:text="券"
                    android:textSize="@dimen/x10"
                    android:textColor="@color/white"
                    android:background="#fa2a3b"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_group_ware_coupon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#fa2a3b"
                    android:textSize="@dimen/x10" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>