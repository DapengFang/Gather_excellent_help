<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_mine_head_userinfo"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x125"
    android:background="@drawable/mine_head_user_bg"
    android:orientation="vertical"
    android:visibility="gone">


    <LinearLayout
        android:id="@+id/ll_userinfo_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x18"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/x48"
                android:layout_height="@dimen/x48"
                android:layout_centerInParent="true"
                android:background="@drawable/head_mine_circle_shape" />

            <com.gather_excellent_help.ui.widget.CircularImage
                android:id="@+id/civ_me_head_icon"
                android:layout_width="@dimen/x44"
                android:layout_height="@dimen/x44"
                android:layout_centerInParent="true"
                android:padding="@dimen/x3"
                android:src="@drawable/default_person_icon" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_mine_tabao_account"
            android:layout_width="@dimen/x48"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x2"
            android:singleLine="true"
            android:text="迷失的候鸟"
            android:textColor="#ffffff"
            android:textSize="@dimen/x10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_userinfo_alipay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ll_userinfo_head"
        android:layout_marginLeft="@dimen/x18"
        android:layout_toRightOf="@id/ll_userinfo_head"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_userinfo_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未绑定，马上绑定>>"
            android:textColor="#ffffff"
            android:textSize="@dimen/x12" />

        <TextView
            android:id="@+id/tv_userinfo_alipay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x1"
            android:text="收款号（支付宝）"
            android:textColor="#aaffffff"
            android:textSize="@dimen/x8" />

        <View
            android:layout_width="@dimen/x80"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/x4"
            android:background="#22ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_userinfo_level_icon"
                android:layout_width="@dimen/x32"
                android:layout_height="@dimen/x12"
                android:background="@drawable/head_daren_level_icon"
                android:gravity="center"
                android:text="VIP4"
                android:textColor="#ffffff"
                android:textSize="@dimen/x8" />

            <TextView
                android:id="@+id/tv_userinfo_level_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x3"
                android:text="代理商"
                android:textColor="#ffffff"
                android:textSize="@dimen/x8" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_mine_set"
        android:layout_width="@dimen/x45"
        android:layout_height="@dimen/x45"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x18"
        android:layout_marginTop="@dimen/x20">

        <TextView
            android:id="@+id/iv_me_person_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="@dimen/x12" />

    </RelativeLayout>


</RelativeLayout>