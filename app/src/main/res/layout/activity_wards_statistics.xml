<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gather_excellent_help.ui.activity.wards.WardsStatisticsActivity">

    <include layout="@layout/top_zhuangai_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始年月"
                android:textSize="16sp"
                android:textColor="#ee000000"
                android:layout_marginLeft="@dimen/x7"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:background="@drawable/gray_cordor_stroke_shape"
                android:layout_marginLeft="@dimen/x7"
                android:layout_marginRight="@dimen/x7"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束年月"
                android:textSize="16sp"
                android:textColor="#ee000000"
                android:layout_marginLeft="@dimen/x7"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:background="@drawable/gray_cordor_stroke_shape"
                android:layout_marginLeft="@dimen/x7"
                android:layout_marginRight="@dimen/x3"/>
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#11000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:orientation="horizontal"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/x8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间"
                android:textSize="@dimen/x12"
                android:textColor="#333333"/>
            <EditText
                android:id="@+id/et_ward_statics_starttime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/type_sosuo_white_troke"
                android:paddingRight="@dimen/x3"
                android:textSize="@dimen/x10"
                android:textColor="#55000000"
                android:cursorVisible="true"
                android:layout_marginTop="@dimen/x3"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wards_calender_shape"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x3"
                android:src="@drawable/wards_point_shape"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/x8">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束时间"
                android:textSize="@dimen/x12"
                android:textColor="#333333"/>
            <EditText
                android:id="@+id/et_ward_statics_endtime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/type_sosuo_white_troke"
                android:paddingRight="@dimen/x3"
                android:textSize="@dimen/x10"
                android:textColor="#55000000"
                android:cursorVisible="true"
                android:layout_marginTop="@dimen/x3"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#f4f2f2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="@dimen/x16"
            android:textColor="#ee000000"
            android:layout_marginLeft="@dimen/x10"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/x30"
            android:layout_weight="1"
            android:background="@drawable/gray_cordor_stroke_shape"
            android:layout_marginLeft="@dimen/x15"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/black_sousuo"
                android:layout_marginLeft="@dimen/x8"/>
            <EditText
                android:id="@+id/et_ward_statics_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="@dimen/x12"
                android:textColor="#55000000"
                android:cursorVisible="true"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_ward_statistics_search"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x35"
            android:text="搜索"
            android:textSize="@dimen/x16"
            android:gravity="center"
            android:textColor="#ce0101"
            android:layout_marginLeft="@dimen/x6"
            android:layout_marginRight="@dimen/x18" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="会员名称"
            android:textSize="14sp"
            android:textColor="#88000000"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="成交笔数"
            android:textSize="14sp"
            android:textColor="#88000000"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="获得金额"
            android:textSize="14sp"
            android:textColor="#88000000"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#11000000"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_wards_statistics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>
