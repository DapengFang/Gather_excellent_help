<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_l03"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gather_excellent_help.ui.activity.test.TestActivity_l03">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20"
        android:background="#99000000" />

    <com.gather_excellent_help.ui.widget.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/sou_taobao_title_icon" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x143"
                android:background="@drawable/sou_taobao_bg_icon">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x25"
                    android:text="购物先搜索 优惠多多多"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/x16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x35"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginLeft="@dimen/x18"
                    android:layout_marginRight="@dimen/x18"
                    android:background="@drawable/sou_taobao_bg_search_shape">

                    <EditText
                        android:id="@+id/et_test_search_content"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:drawableLeft="@drawable/sou_taobao_white_search"
                        android:drawablePadding="@dimen/x6"
                        android:gravity="center_vertical"
                        android:hint="粘贴淘宝宝贝标题搜索福利"
                        android:paddingLeft="@dimen/x8"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"
                        android:textSize="@dimen/x12" />

                    <TextView
                        android:id="@+id/tv_test_tao_search"
                        android:layout_width="@dimen/x35"
                        android:layout_height="match_parent"
                        android:background="@drawable/sou_taobao_search_shape"
                        android:gravity="center"
                        android:text="搜索"
                        android:textColor="#808080"
                        android:textSize="@dimen/x12" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_item_laod_more"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:paddingLeft="@dimen/x8"
                android:paddingRight="@dimen/x8">

                <ImageView
                    android:id="@+id/v_type_line"
                    android:layout_width="@dimen/x14"
                    android:layout_height="@dimen/x14"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/x8"
                    android:src="@drawable/home_rexiao_title_icon" />

                <TextView
                    android:id="@+id/tv_item_home_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/x8"
                    android:layout_marginLeft="@dimen/x3"
                    android:layout_toRightOf="@id/v_type_line"
                    android:text="教程"
                    android:textColor="#333333"
                    android:textSize="@dimen/x15"
                    android:textStyle="bold" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#f5f5f5" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/setup_01" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/setup_02" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/setup_03" />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:paddingLeft="@dimen/x8"
                android:paddingRight="@dimen/x8">

                <ImageView
                    android:id="@+id/v_type_line2"
                    android:layout_width="@dimen/x14"
                    android:layout_height="@dimen/x14"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/x8"
                    android:src="@drawable/home_rexiao_title_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/x8"
                    android:layout_marginLeft="@dimen/x3"
                    android:layout_toRightOf="@id/v_type_line2"
                    android:text="问答帮助"
                    android:textColor="#333333"
                    android:textSize="@dimen/x15"
                    android:textStyle="bold" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_sou_taobao_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </com.gather_excellent_help.ui.widget.MyNestedScrollView>

</LinearLayout>
