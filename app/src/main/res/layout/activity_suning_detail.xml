<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gather_excellent_help.ui.activity.suning.SuningDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.gather_excellent_help.ui.widget.DragLayout
            android:id="@+id/draglayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/fl_suning_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <FrameLayout
                android:id="@+id/fl_suning_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.gather_excellent_help.ui.widget.DragLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_suning_detail_cart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ff6600"
                    android:gravity="center"
                    android:text="加入购物车"
                    android:textColor="#fff"
                    android:textSize="@dimen/x14" />

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/tv_suning_detail_buy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ff1100"
                    android:gravity="center"
                    android:text="立即购买"
                    android:textColor="#fff"
                    android:textSize="@dimen/x14" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_suning_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:padding="@dimen/x10"
            android:src="@drawable/suning_detatil_back_icon" />

        <ImageView
            android:id="@+id/iv_suning_detail_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:padding="@dimen/x10"
            android:src="@drawable/suning_detail_cart_icon" />

        <ImageView
            android:id="@+id/iv_suning_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_suning_detail_cart"
            android:layout_marginRight="@dimen/x10"
            android:padding="@dimen/x10"
            android:src="@drawable/suning_detail_share_icon"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>
