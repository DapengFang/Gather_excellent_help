<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ware_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.gather_excellent_help.ui.activity.WareListActivity">

    <LinearLayout
        android:id="@+id/ll_ware_list_sousuo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_exit"
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x12"
                android:src="@drawable/arraw_left_jiantou" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/x30"
            android:layout_weight="1"
            android:background="@drawable/search_frame_after_shape">

            <ImageView
                android:id="@+id/iv_ware_list_shape"
                android:layout_width="@dimen/x14"
                android:layout_height="@dimen/x14"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:src="@drawable/home_search_circle_icon" />

            <EditText
                android:id="@+id/et_ware_list_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/iv_ware_list_shape"
                android:background="@null"
                android:cursorVisible="true"
                android:imeOptions="actionSearch"
                android:paddingLeft="@dimen/x4"
                android:singleLine="true"
                android:textColor="#808080"
                android:textSize="@dimen/x12" />

            <RelativeLayout
                android:id="@+id/rl_edit_text_exit"
                android:layout_width="@dimen/x45"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="@dimen/x14"
                    android:layout_height="@dimen/x14"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x8"
                    android:src="@drawable/search_after_exit" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sousuo"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="搜索"
                android:textColor="#333333"
                android:textSize="@dimen/x12" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_ware_list_price"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30"
                android:background="@drawable/gray_cordor_solid_shape"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_up_price"
                        android:layout_width="@dimen/x7"
                        android:layout_height="@dimen/x7"
                        android:src="@drawable/up_black_arraw" />

                    <ImageView
                        android:id="@+id/iv_down_price"
                        android:layout_width="@dimen/x7"
                        android:layout_height="@dimen/x7"
                        android:src="@drawable/down_gray_arraw" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_ware_list_leibie"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30"
                android:background="@drawable/gray_cordor_solid_shape"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ware_list_leibie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类别"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/x7"
                        android:layout_height="@dimen/x7"
                        android:src="@drawable/up_black_arraw"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="@dimen/x7"
                        android:layout_height="@dimen/x7"
                        android:src="@drawable/down_black_arraw" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_ware_list_pingpai"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30"
                android:background="@drawable/gray_cordor_solid_shape"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ware_list_pingpai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/x7"
                        android:layout_height="@dimen/x7"
                        android:src="@drawable/up_black_arraw"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="@dimen/x7"
                        android:layout_height="@dimen/x7"
                        android:src="@drawable/down_black_arraw" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_ware_list_rongliang"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30"
                android:background="@drawable/gray_cordor_solid_shape"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ware_list_rongliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="规格"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/x7"
                        android:layout_height="@dimen/x7"
                        android:src="@drawable/up_black_arraw"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="@dimen/x7"
                        android:layout_height="@dimen/x7"
                        android:src="@drawable/down_black_arraw" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee" />


    <GridView
        android:id="@+id/gv_wart_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#11000000"
        android:horizontalSpacing="2dp"
        android:numColumns="2"
        android:verticalSpacing="2dp"></GridView>

    <LinearLayout
        android:id="@+id/ll_ware_list_loadmore"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_alignParentBottom="true"
        android:background="#22000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载更多..."
            android:textColor="#55000000"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
