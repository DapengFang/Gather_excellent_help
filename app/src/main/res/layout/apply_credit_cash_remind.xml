<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="#fa2a3b">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="申请提现提示"
            android:textColor="@color/white"
            android:textSize="@dimen/x14" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x320"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/x10">

        <TextView
            android:id="@+id/tv_credit_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="center_vertical"
            android:textColor="#666666"
            android:textSize="@dimen/x12" />

        <View
            android:layout_width="@dimen/x300"
            android:layout_height="2px"
            android:background="#eeeeee" />

        <TextView
            android:id="@+id/tv_credit_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="center_vertical"
            android:textColor="#666666"
            android:textSize="@dimen/x12" />

        <View
            android:layout_width="@dimen/x300"
            android:layout_height="2px"
            android:background="#eeeeee" />

        <TextView
            android:id="@+id/tv_credit_money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="center_vertical"
            android:textColor="#666666"
            android:textSize="@dimen/x12" />

        <View
            android:layout_width="@dimen/x300"
            android:layout_height="2px"
            android:background="#eeeeee" />

        <TextView
            android:id="@+id/tv_cerdit_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/x10"
            android:textColor="#666666"
            android:textSize="@dimen/x12" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="#fafafa"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_credit_remind_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="前去修改"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/tv_credit_remind_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认提现"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/x14" />
    </LinearLayout>

</LinearLayout>