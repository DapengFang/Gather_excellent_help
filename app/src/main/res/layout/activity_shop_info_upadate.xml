<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shop_info_upadate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.gather_excellent_help.ui.activity.shop.ShopInfoUpadateActivity">

    <include layout="@layout/top_zhuangai_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="@dimen/x15"
                    android:layout_marginLeft="@dimen/x7"
                    android:background="#eeff0000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x7"
                    android:layout_weight="1"
                    android:text="基本信息"
                    android:textColor="#ee000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="省/市/区："
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_merchant_pcs_choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="请选择省市区"
                    android:textColor="#55000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#ffffff">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#11000000"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="详细地址："
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_merchant_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入详细地址"
                    android:cursorVisible="true"
                    android:textColorHint="#55000000"
                    android:textColor="#88000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#ffffff">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#11000000"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="店铺简介："
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_merchant_shopinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入店铺简介"
                    android:cursorVisible="true"
                    android:textColorHint="#55000000"
                    android:textColor="#88000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#ffffff">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#11000000"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="电话："
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_merchant_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:inputType="number"
                    android:hint="请输入电话号码"
                    android:cursorVisible="true"
                    android:textColorHint="#55000000"
                    android:textColor="#88000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#ffffff">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#11000000"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="店名："
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_merchant_shopname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入店名"
                    android:cursorVisible="true"
                    android:textColorHint="#55000000"
                    android:textColor="#88000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#ffffff">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#11000000"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#ffffff">
                <ImageView
                    android:layout_width="@dimen/x12"
                    android:layout_height="@dimen/x12"
                    android:src="@drawable/shop_time_icon"
                    android:layout_marginLeft="@dimen/x10"/>
                <TextView
                    android:layout_width="@dimen/x90"
                    android:layout_height="wrap_content"
                    android:text="营业时间"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:paddingLeft="@dimen/x10"/>
                <TextView
                    android:id="@+id/tv_shop_time_am"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="早上9:00"
                    android:textSize="12sp"
                    android:textColor="#55000000" />
                <TextView
                    android:layout_width="@dimen/x10"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#55000000" />

                <TextView
                    android:id="@+id/tv_shop_time_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晚上18:00"
                    android:textSize="12sp"
                    android:textColor="#55000000" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x3"
                android:background="#EFEFEF"/>

            <TextView
                android:id="@+id/tv_shop_info_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x60"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:text="下一步"
                android:textSize="@dimen/x16"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/red_button_circle_selector"/>
        </LinearLayout>

        <View
            android:id="@+id/v_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000"
            android:visibility="gone"/>

    </FrameLayout>

</LinearLayout>
