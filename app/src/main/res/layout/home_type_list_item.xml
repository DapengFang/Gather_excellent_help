<?xml version="1.0" encoding="utf-8"?><!--小商品区域-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x98"
        android:paddingBottom="@dimen/x4"
        android:paddingTop="@dimen/x4">

        <LinearLayout
            android:id="@+id/ll_activity_list_ware"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x4"
            android:paddingBottom="@dimen/x4"
            android:paddingTop="@dimen/x4">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <ImageView
                    android:id="@+id/iv_activity_list_ware_img"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x80"
                    android:layout_centerVertical="true"
                    android:background="#11000000" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x2"
                android:paddingRight="@dimen/x3"
                android:paddingTop="@dimen/x3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x36">

                    <TextView
                        android:id="@+id/tv_activity_ware_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:lineSpacingExtra="@dimen/x2"
                        android:textColor="#333333"
                        android:lines="2"
                        android:textSize="@dimen/x14" />

                    <TextView
                        android:id="@+id/tv_activity_sun_tao_icon"
                        android:layout_width="@dimen/x36"
                        android:layout_height="@dimen/x14"
                        android:text=""
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@drawable/sun_tao_text_selector"
                        android:textSize="@dimen/x10"
                        android:layout_marginTop="@dimen/x3"
                        android:visibility="gone"
                        android:background="@drawable/sun_tao_icon_selector"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_activity_ware_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x3"
                    android:textColor="#CCCCCC"
                    android:textSize="@dimen/x8"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/x4"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_activity_ware_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="#FA2D3B"
                        android:textSize="@dimen/x14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/x3"
                        android:text="现价"
                        android:textColor="#55000000"
                        android:textSize="@dimen/x10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_activity_list_ware_zhuan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x12"
                    android:layout_marginTop="@dimen/x6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_activity_ware_zhuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="#ff6600"
                        android:textSize="@dimen/x7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/x2"
                        android:text="赚"
                        android:textColor="#ff6600"
                        android:textSize="@dimen/x5" />

                    <TextView
                        android:id="@+id/tv_activity_ware_coast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/x4"
                        android:textColor="#ff6600"
                        android:textSize="@dimen/x7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/x2"
                        android:text="成本"
                        android:textColor="#ff6600"
                        android:textSize="@dimen/x5" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_activity_ware_coupon_second"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x15"
            android:layout_alignBottom="@id/ll_activity_list_ware"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/x4"
            android:layout_marginRight="@dimen/x3"
            android:background="@drawable/activity_list_red_shape"
            android:gravity="center"
            android:text="点我还有券"
            android:textColor="@color/white"
            android:textSize="@dimen/x8"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_activity_ware_coupon"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x9"
            android:layout_alignBottom="@id/ll_activity_list_ware"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/x4"
            android:layout_marginRight="@dimen/x3"
            android:background="@drawable/activity_list_red_shape"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/x6"
            android:textStyle="bold" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5"
        android:background="#EFEFEF"/>
</LinearLayout>
