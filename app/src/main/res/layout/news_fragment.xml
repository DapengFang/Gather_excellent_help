<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="#eeff0000"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/rl_exit"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x12"
                android:src="@drawable/white_left_arraw" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/x34"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/taobao_search_shape">

            <ImageView
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:src="@drawable/black_sousuo"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x15"/>

            <EditText
                android:id="@+id/et_taobao_search_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textColor="#99000000"
                android:hint="请输入关键字查询"
                android:textSize="14sp"
                android:cursorVisible="false"
                android:paddingLeft="@dimen/x3"/>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_taobao_sousuo"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#22000000"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_news_horizational"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"></android.support.v7.widget.RecyclerView>

  <FrameLayout
      android:id="@+id/fl_news_frag"
      android:layout_width="match_parent"
      android:layout_height="match_parent"></FrameLayout>

</LinearLayout>