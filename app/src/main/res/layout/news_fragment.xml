<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45">
        <RelativeLayout
            android:id="@+id/rl_news_search_before"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fa2d3b"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x8"
                android:layout_marginBottom="@dimen/x8"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/search_frame_before"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/x14"
                    android:layout_height="@dimen/x14"
                    android:src="@drawable/search_before"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请输入关键字查询"
                    android:textSize="@dimen/x12"
                    android:textColor="#b2b1b1"
                    android:layout_marginLeft="@dimen/x3"/>
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_news_search_after"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#fa2d3b">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/x8"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginBottom="@dimen/x8"
                android:background="@drawable/search_frame_after">
                <ImageView
                    android:layout_width="@dimen/x14"
                    android:layout_height="@dimen/x14"
                    android:src="@drawable/search_after"
                    android:layout_marginLeft="@dimen/x8"/>
                <EditText
                    android:id="@+id/et_taobao_search_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="请输入关键字查询"
                    android:cursorVisible="true"
                    android:textSize="@dimen/x12"
                    android:textColor="#b2b1b1"
                    android:textColorHint="#b2b1b1"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/x4"/>

                <RelativeLayout
                android:id="@+id/rl_edit_text_exit"
                android:layout_width="@dimen/x45"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/x14"
                    android:layout_height="@dimen/x14"
                    android:src="@drawable/search_after_exit"
                    android:layout_marginRight="@dimen/x8"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_taobao_sousuo"
                android:layout_width="@dimen/x60"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_news_edit_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:textSize="@dimen/x16"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#22000000"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_news_horizational"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

  <FrameLayout
      android:id="@+id/fl_news_frag"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#f2f2f2"></FrameLayout>

</LinearLayout>