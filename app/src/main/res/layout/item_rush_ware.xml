<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <ImageView
        android:id="@+id/iv_rush_pic"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:src="@drawable/ware_rush"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_rush_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#99000000"
            android:layout_marginTop="@dimen/x3"/>
        <TextView
            android:id="@+id/tv_rush_ware_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="到手价：￥5623.00"
            android:textColor="#99ff0000"
            android:layout_marginTop="@dimen/x2"/>
        <TextView
            android:id="@+id/tv_rush_ware_coast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="到手价：￥5623.00"
            android:textColor="#99ff0000"/>
        <TextView
            android:id="@+id/tv_rush_ware_aprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="到手价：￥5623.00"
            android:textColor="#99000000"/>
        <TextView
            android:id="@+id/tv_rush_ware_coupons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领券立减200"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:background="@drawable/type_xiadan_bg"/>
    </LinearLayout>

</LinearLayout>