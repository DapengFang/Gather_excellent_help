<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_me_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:orientation="vertical"
        android:background="#fff"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/x10">

            <TextView
                android:id="@+id/tv_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小明"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="18870882835"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10"
            android:text="四川省 成都市 武侯区 天府软件园F区1栋2单元"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x55"
        android:padding="@dimen/x10"
        android:background="#fff">

        <CheckBox
            android:id="@+id/cb_address_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="默认地址"
            android:button="@drawable/cart_checkbox_selector"
            android:textColor="#9f9f9f"
            android:textSize="10sp"
            android:paddingLeft="@dimen/x7"/>

        <TextView
            android:id="@+id/tv_address_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/x3"
            android:paddingLeft="@dimen/x6"
            android:paddingRight="@dimen/x6"
            android:paddingTop="@dimen/x3"
            android:text="删除"
            android:gravity="center_vertical"
            android:textColor="#9f9f9f"
            android:textSize="12sp"
            android:drawableLeft="@drawable/shanchu_idcard_icon"
            android:drawablePadding="@dimen/x3"/>

        <TextView
            android:id="@+id/tv_address_bianji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_toLeftOf="@id/tv_address_delete"
            android:paddingBottom="@dimen/x3"
            android:paddingLeft="@dimen/x6"
            android:paddingRight="@dimen/x6"
            android:paddingTop="@dimen/x3"
            android:text="编辑"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="#9f9f9f"
            android:drawableLeft="@drawable/bianji_idcard_icon"
            android:drawablePadding="@dimen/x3"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x8"
        android:background="@color/translate" />

</LinearLayout>