<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_activity_ware"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/x8">

    <RelativeLayout
        android:layout_width="@dimen/x106"
        android:layout_height="@dimen/x106">

        <ImageView
            android:id="@+id/iv_activity_ware_img"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/x90"
            android:layout_centerInParent="true"
            android:background="#11000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/x95"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_activity_ware_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:lineSpacingExtra="@dimen/x2"
            android:text="Haier/海尔EC"
            android:textColor="#333333"
            android:textSize="@dimen/x12" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/x4"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_activity_ware_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="￥2000.00"
            android:textColor="#FA2D3B"
            android:textSize="@dimen/x12"
            android:layout_marginLeft="@dimen/x3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_activity_ware_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/x5"
            android:text="成本"
            android:textColor="#55000000"
            android:textSize="@dimen/x9" />
    </LinearLayout>

</LinearLayout>