<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_activity_ware"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/x106"
            android:layout_height="@dimen/x106">

            <ImageView
                android:id="@+id/iv_activity_ware_img"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/x90"
                android:layout_centerInParent="true"
                android:background="#11000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x2">

            <TextView
                android:id="@+id/tv_activity_ware_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingLeft="@dimen/x2"
                android:paddingRight="@dimen/x2"
                android:text="Haier/海尔EC"
                android:textColor="#333333"
                android:textSize="@dimen/x12" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/x4"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/x2"
            android:paddingBottom="@dimen/x2"
            android:paddingRight="@dimen/x4"
            android:paddingLeft="@dimen/x4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="付款价"
                android:textColor="#55000000"
                android:textSize="@dimen/x9" />

            <TextView
                android:id="@+id/tv_activity_ware_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/x2"
                android:text=" ¥2000.00"
                android:textColor="#FA2A3B"
                android:textSize="@dimen/x9" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x2"
            android:paddingRight="@dimen/x4"
            android:paddingLeft="@dimen/x4">

            <TextView
                android:id="@+id/tv_activity_home_zhuan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="赚 0.00"
                android:textColor="#ff6600"
                android:textSize="@dimen/x10" />

            <TextView
                android:id="@+id/tv_activity_home_coupon"
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x16"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x3"
                android:background="@drawable/home_acticity_warecoupon_shape"
                android:gravity="center"
                android:text="券"
                android:textColor="#ffffff"
                android:textSize="@dimen/x12" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="#eeeeee" />
</LinearLayout>