<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_bind_psw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gather_excellent_help.ui.activity.SetBindPswActivity">

    <include layout="@layout/top_zhuangai_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x36"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x10"
        android:background="#fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置密码"
            android:textColor="#333333"
            android:textStyle="italic"
            android:layout_marginLeft="@dimen/x10"/>

        <EditText
            android:id="@+id/et_bind_setpsw_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x60"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="number"
            android:textStyle="italic"
            android:textSize="14sp"
            android:textColor="#99000000"
            android:textColorHint="#a9a9a9"
            android:cursorVisible="false"
            android:gravity="center_vertical"
            android:padding="@dimen/x3"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_bind_setpsw_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bind_phone_confirm_selector"
        android:gravity="center"
        android:text="立即设置"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/x80"/>

</LinearLayout>
