<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context="com.gather_excellent_help.ui.activity.BindPhoneActivity">

    <include layout="@layout/top_zhuangai_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x160">

        <ImageView
            android:id="@+id/iv_mobile_safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x30"
            android:src="@drawable/set_phone_safe_icon" />

        <TextView
            android:id="@+id/tv_mobile_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_mobile_safe"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x30"
            android:text="绑定会让您的账号更安全"
            android:textColor="#cccccc"
            android:textSize="@dimen/x12" />

        <TextView
            android:id="@+id/tv_mobile_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mobile_title1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x10"
            android:text="完成绑定后，您还可以通过手机号登录聚优帮"
            android:textColor="#cccccc"
            android:textSize="@dimen/x12" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x36"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/set_phone_mobile_icon" />

        <EditText
            android:id="@+id/et_bind_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:background="@null"
            android:cursorVisible="false"
            android:gravity="center_vertical"
            android:hint="请输入您的手机号"
            android:inputType="number"
            android:padding="@dimen/x3"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textColorHint="#c2888888"
            android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="#00000000">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#cccccc"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x16"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x36"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/set_phone_sms_icon" />

        <EditText
            android:id="@+id/et_bind_sms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:hint="请输入短信验证码"
            android:textStyle="bold"
            android:inputType="number"
            android:textColor="#333333"
            android:textColorHint="#c2888888"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/tv_bind_phone_getsms"
            android:layout_width="@dimen/x120"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x10"
            android:gravity="center"
            android:text="获取短信验证码"
            android:textColor="#fb2d3a"
            android:textSize="@dimen/x12" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="#00000000">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#cccccc"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x16"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_bind_phone_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x80"
        android:background="@drawable/bind_phone_confirm_selector"
        android:gravity="center"
        android:text="立即绑定"
        android:textColor="#ffffff"
        android:textSize="@dimen/x14"
        android:textStyle="bold" />

</LinearLayout>
