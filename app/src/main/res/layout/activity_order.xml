<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/top_zhuangai_bar"/>

    <com.gather_excellent_help.ui.widget.ViewpagerIndicator
        android:id="@+id/vid_order_manager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="全部"
            android:textSize="12sp"
            android:textColor="#55000000"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="待付款"
            android:textSize="12sp"
            android:textColor="#55000000"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="已付款"
            android:textSize="12sp"
            android:textColor="#55000000"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="已完成"
            android:textSize="12sp"
            android:textColor="#55000000"
            android:gravity="center" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="退款/售后"
            android:textSize="12sp"
            android:textColor="#55000000"
            android:gravity="center" />


    </com.gather_excellent_help.ui.widget.ViewpagerIndicator>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5"
        android:background="#11000000"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_order_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/iv_order_no_zhanwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x60"
            android:src="@drawable/juyoubang_no_zhanwei"
            android:visibility="gone"/>
    </FrameLayout>

</LinearLayout>
