<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gather_excellent_help.ui.activity.shop.ShopBrandUpdateActivity">

    <include layout="@layout/top_zhuangai_bar" />

    <LinearLayout
        android:id="@+id/ll_merchant_brand_expand"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x7">

        <View
            android:layout_width="@dimen/x3"
            android:layout_height="@dimen/x15"
            android:layout_marginLeft="@dimen/x7"
            android:background="#eeff0000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x7"
            android:layout_weight="1"
            android:text="主营品牌"
            android:textColor="#ee000000"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="@dimen/x45"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_merchant_brand_arraw"
                android:layout_width="@dimen/x9"
                android:layout_height="@dimen/x9"
                android:layout_centerInParent="true"
                android:src="@drawable/down_black_arraw" />

        </RelativeLayout>

    </LinearLayout>

    <com.gather_excellent_help.ui.widget.MyGridView
        android:id="@+id/gv_merchant_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:numColumns="4"
        android:padding="@dimen/x3"></com.gather_excellent_help.ui.widget.MyGridView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#11000000"/>

    <TextView
        android:id="@+id/tv_shop_info_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x70"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:text="下一步"
        android:textSize="@dimen/x16"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/red_button_circle_selector"/>

</LinearLayout>
