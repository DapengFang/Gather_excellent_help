<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gather_excellent_help.ui.activity.shop.ShopBrandUpdateActivity">

    <include layout="@layout/top_zhuangai_bar" />

    <com.gather_excellent_help.ui.widget.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_merchant_brand_expand"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:layout_marginTop="@dimen/x7"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="@dimen/x15"
                    android:layout_marginLeft="@dimen/x7"
                    android:background="#eeff0000" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x7"
                    android:layout_weight="1"
                    android:text="主营品牌"
                    android:textColor="#ee000000"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="@dimen/x160"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_merchant_brand_arraw"
                        android:layout_width="@dimen/x9"
                        android:layout_height="@dimen/x9"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/x8"
                        android:src="@drawable/down_black_arraw" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x3"
                        android:layout_toLeftOf="@id/iv_merchant_brand_arraw"
                        android:text="更多品牌"
                        android:textColor="#99000000"
                        android:textSize="14sp" />

                </RelativeLayout>

            </LinearLayout>

            <com.gather_excellent_help.ui.widget.MyGridView
                android:id="@+id/gv_merchant_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:numColumns="4"
                android:padding="@dimen/x3"></com.gather_excellent_help.ui.widget.MyGridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#11000000" />

            <TextView
                android:id="@+id/tv_shop_info_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x70"
                android:background="@drawable/red_button_circle_selector"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="@dimen/x16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x70"
                android:background="#00000000"/>

        </LinearLayout>

    </com.gather_excellent_help.ui.widget.MyNestedScrollView>

</LinearLayout>
