<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_storeshow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gather_excellent_help.ui.activity.shop.StoreshowActivity">

    <include layout="@layout/top_zhuangai_bar"/>

    <TextView
        android:id="@+id/tv_online_pay"
        android:layout_width="@dimen/x240"
        android:layout_height="@dimen/x40"
        android:text="在线付200元"
        android:textSize="14sp"
        android:textColor="@drawable/tv_store_text_selector"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x60"
        android:background="@drawable/tv_store_show_selector"/>

    <TextView
        android:id="@+id/tv_outline_pay"
        android:layout_width="@dimen/x240"
        android:layout_height="@dimen/x40"
        android:text="线下付费给服务商"
        android:textSize="14sp"
        android:textColor="@drawable/tv_store_text_selector"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/tv_store_show_selector"/>

    <TextView
        android:layout_width="@dimen/x240"
        android:layout_height="@dimen/x40"
        android:lines="2"
        android:text="一次性服务费\n有效期-终生有效"
        android:lineSpacingExtra="@dimen/x3"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#99000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x60"/>

    <TextView
        android:id="@+id/tv_store_submit"
        android:layout_width="@dimen/x240"
        android:layout_height="@dimen/x40"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/register_confirm_selector"
        android:gravity="center"
        android:layout_marginTop="@dimen/x60"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="18sp" />



</LinearLayout>
