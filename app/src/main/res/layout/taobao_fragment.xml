<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ware_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gather_excellent_help.ui.activity.WareListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="#eeff0000"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <RelativeLayout
            android:id="@+id/rl_exit"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x12"
                android:src="@drawable/white_left_arraw" />
        </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/x34"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/taobao_search_shape">

            <ImageView
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:src="@drawable/black_sousuo"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x15"/>

            <EditText
                android:id="@+id/et_taobao_search_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textColor="#99000000"
                android:hint="请输入关键字查询"
                android:textSize="14sp"
                android:cursorVisible="false"
                android:paddingLeft="@dimen/x3"/>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_taobao_sousuo"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#22000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll_taobao_zonghe"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/gray_cordor_solid_shape">
                <TextView
                    android:id="@+id/tv_taobao_zonghe_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="综合"
                    android:textSize="14sp"
                    android:textColor="@drawable/text_taobao_price_selector"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x3">
                    <ImageView
                        android:id="@+id/iv_taobao_zonghe_sort"
                        android:layout_width="@dimen/x12"
                        android:layout_height="@dimen/x12"
                        android:src="@drawable/zonghe_taobao_selector" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll_taobao_xiaoliang"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/gray_cordor_solid_shape">
                <TextView
                    android:id="@+id/tv_taobao_xiaoliang_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="销量"
                    android:textSize="14sp"
                    android:textColor="@drawable/text_taobao_price_selector"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll_taobao_price"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/gray_cordor_solid_shape">
                <TextView
                    android:id="@+id/tv_taobao_price_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价格"
                    android:textSize="14sp"
                    android:textColor="@drawable/text_taobao_price_selector"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x8">
                    <ImageView
                        android:id="@+id/iv_up_price"
                        android:layout_width="@dimen/x7"
                        android:layout_height="@dimen/x7"
                        android:src="@drawable/up_gray_arraw"/>
                    <ImageView
                        android:id="@+id/iv_down_price"
                        android:layout_width="@dimen/x7"
                        android:layout_height="@dimen/x7"
                        android:src="@drawable/down_gray_arraw" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll_taobao_shaixuan"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x30"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/gray_cordor_solid_shape">
                <TextView
                    android:id="@+id/tv_taobao_shaixuan_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="筛选"
                    android:textSize="14sp"
                    android:textColor="@drawable/text_taobao_price_selector"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x3">

                    <ImageView
                        android:id="@+id/iv_taobao_shaixuan_sort"
                        android:layout_width="@dimen/x12"
                        android:layout_height="@dimen/x12"
                        android:src="@drawable/shaixuan_taobao_selecor" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x3"
        android:background="#11000000"/>


    <GridView
        android:id="@+id/gv_taobao_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="2"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        android:background="#11000000"></GridView>
    <LinearLayout
        android:id="@+id/ll_taobao_loadmore"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="#22000000"
        android:gravity="center"
        android:visibility="gone"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载更多..."
            android:textColor="#55000000"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>
