<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_type_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/x4">

            <ImageView
                android:id="@+id/iv_home_type_photo"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/x140"
                android:layout_centerInParent="true"
                android:background="#11000000" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x6"
            android:paddingRight="@dimen/x6"
            android:paddingTop="@dimen/x6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_home_type_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/x2"
                    android:lines="2"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/x14" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4">

                <LinearLayout
                    android:layout_width="@dimen/x42"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x6"
                    android:gravity="center_horizontal|end"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_activity_rexiao_share"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x30">

                        <ImageView
                            android:layout_width="@dimen/x24"
                            android:layout_height="@dimen/x24"
                            android:layout_centerInParent="true"
                            android:src="@drawable/home_rexiao_ware_share" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x6"
                        android:layout_marginTop="@dimen/x12">

                        <TextView
                            android:id="@+id/tv_type_second_coupons"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x18"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/activity_list_red_shape"
                            android:gravity="center"
                            android:text="点我还有券"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x8" />

                        <TextView
                            android:id="@+id/tv_rush_ware_coupons"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x18"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/activity_list_red_shape"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x10" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="付款价"
                            android:textColor="#55000000"
                            android:textSize="@dimen/x10" />

                        <TextView
                            android:id="@+id/tv_rush_ware_aprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/x1"
                            android:textColor="#FA2D3B"
                            android:textSize="@dimen/x14" />

                        <ImageView
                            android:id="@+id/iv_activity_list_vip"
                            android:layout_width="@dimen/x29"
                            android:layout_height="@dimen/x12"
                            android:layout_marginBottom="@dimen/x2"
                            android:layout_marginLeft="@dimen/x6"
                            android:src="@drawable/home_activity_rexiao_vip" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_activity_list_ware_zhuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x6"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_rush_ware_coast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:textColor="#474747"
                            android:textSize="@dimen/x10" />

                        <TextView
                            android:id="@+id/tv_rush_ware_sale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="@dimen/x6"
                            android:textColor="#ff6600"
                            android:textSize="@dimen/x10" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>