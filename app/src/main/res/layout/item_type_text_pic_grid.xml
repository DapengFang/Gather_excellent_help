<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_type_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/x4">

            <ImageView
                android:id="@+id/iv_home_type_photo"
                android:layout_width="@dimen/x140"
                android:layout_height="@dimen/x140"
                android:layout_centerInParent="true"
                android:background="#11000000" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x6"
            android:paddingRight="@dimen/x6"
            android:paddingTop="@dimen/x6">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/x36">

               <TextView
                   android:id="@+id/tv_home_type_title"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:lineSpacingExtra="@dimen/x2"
                   android:lines="2"
                   android:text="正品长虹全自动洗衣机7.5KG家用大容量波正品长虹全自动洗衣机7.5KG家用大容量波"
                   android:textColor="#333333"
                   android:textSize="@dimen/x14" />

               <TextView
                   android:id="@+id/tv_activity_sun_tao_icon"
                   android:layout_width="@dimen/x36"
                   android:layout_height="@dimen/x14"
                   android:text=""
                   android:textStyle="bold"
                   android:gravity="center"
                   android:textColor="@drawable/sun_tao_text_selector"
                   android:textSize="@dimen/x10"
                   android:layout_marginTop="@dimen/x3"
                   android:visibility="gone"
                   android:background="@drawable/sun_tao_icon_selector"/>

           </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rush_ware_aprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textColor="#FA2D3B"
                    android:textSize="@dimen/x14"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/x5"
                    android:text="现价"
                    android:textColor="#55000000"
                    android:textSize="@dimen/x8" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_activity_list_ware_zhuan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x18"
                android:layout_marginTop="@dimen/x3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rush_ware_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textColor="#ff6600"
                    android:textSize="@dimen/x8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/x2"
                    android:text="赚"
                    android:textColor="#ff6600"
                    android:textSize="@dimen/x5" />

                <TextView
                    android:id="@+id/tv_rush_ware_coast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/x3"
                    android:textColor="#ff6600"
                    android:textSize="@dimen/x8" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/x2"
                    android:layout_weight="1"
                    android:text="成本"
                    android:textColor="#ff6600"
                    android:textSize="@dimen/x5" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_type_second_coupons"
        android:layout_width="@dimen/x48"
        android:layout_height="@dimen/x15"
        android:layout_alignBottom="@id/ll_type_grid"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x3"
        android:layout_marginBottom="@dimen/x3"
        android:background="@drawable/activity_list_red_shape"
        android:gravity="center"
        android:text="点我还有券"
        android:textColor="@color/white"
        android:textSize="@dimen/x8"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_rush_ware_coupons"
        android:layout_width="@dimen/x48"
        android:layout_height="@dimen/x15"
        android:layout_alignBottom="@id/ll_type_grid"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x3"
        android:layout_marginBottom="@dimen/x6"
        android:background="@drawable/activity_list_red_shape"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/x8"
        android:textStyle="bold" />

</RelativeLayout>