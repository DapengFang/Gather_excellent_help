<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/x8"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="#33000000">
    <ImageView
        android:layout_width="@dimen/x28"
        android:layout_height="@dimen/x16"
        android:src="@drawable/rush_left"/>
    <TextView
        android:id="@+id/tv_rush_more_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日新品"
        android:textSize="16sp"
        android:layout_marginLeft="@dimen/x3"/>
    <ImageView
        android:layout_width="@dimen/x28"
        android:layout_height="@dimen/x16"
        android:src="@drawable/rush_right"
        android:layout_marginLeft="@dimen/x3"/>

</LinearLayout>

    <com.gather_excellent_help.ui.widget.MyImageView
        android:id="@+id/iv_rush_more_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/zhanwei_gray"
        android:background="#11000000"/>
    <com.gather_excellent_help.ui.widget.MyFillGridView
        android:id="@+id/gv_rush_zera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:padding="@dimen/x3"></com.gather_excellent_help.ui.widget.MyFillGridView>

</LinearLayout>