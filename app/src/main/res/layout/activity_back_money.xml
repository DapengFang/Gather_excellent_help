<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_back_money"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gather_excellent_help.ui.activity.suning.saleafter.BackMoneyActivity">

    <include layout="@layout/top_zhuangai_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x110"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/x10">

            <ImageView
                android:id="@+id/iv_suning_order_ware"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:src="@mipmap/zhanwei_icon" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_suning_order_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#555555"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_suning_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_suning_order_title"
                    android:layout_marginTop="@dimen/x3"
                    android:text=""
                    android:textColor="#aaaaaa"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/x60"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x10">

                <TextView
                    android:id="@+id/tv_suning_order_realprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_suning_order_oldprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_suning_order_realprice"
                    android:layout_marginTop="@dimen/x3"
                    android:text=""
                    android:textColor="#aaaaaa"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_suning_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_suning_order_oldprice"
                    android:text="x1"
                    android:textColor="#aaaaaa"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dddddd" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x8"
        android:background="#eeeeee"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/x10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="#eeeeee"
            android:paddingLeft="@dimen/x10">

            <TextView
                android:id="@+id/tv_star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="*"
                android:textColor="#aaff0000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x3"
                android:layout_toRightOf="@id/tv_star1"
                android:text="申请服务"
                android:textColor="#99000000"
                android:textSize="@dimen/x14" />

            <TextView
                android:id="@+id/tv_back_apply_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:layout_toRightOf="@id/tv_type1"
                android:text="退货退款"
                android:textColor="#aa000000"
                android:textSize="@dimen/x12" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tuihuo_reason"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:background="#eeeeee"
            android:paddingLeft="@dimen/x10">

            <TextView
                android:id="@+id/tv_star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="*"
                android:textColor="#aaff0000"
                android:textSize="@dimen/x14" />

            <TextView
                android:id="@+id/tv_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x3"
                android:layout_toRightOf="@id/tv_star2"
                android:text="退货原因"
                android:textColor="#99000000"
                android:textSize="@dimen/x14" />

            <TextView
                android:id="@+id/tv_tuihuo_choice_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:layout_marginRight="@dimen/x10"
                android:layout_toRightOf="@id/tv_type2"
                android:text="请选择退货原因"
                android:textColor="#aa000000"
                android:textSize="@dimen/x12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x15"
                android:src="@drawable/arraw_right_jiantou" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tuihuo_explain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:background="#eeeeee"
            android:paddingLeft="@dimen/x10">

            <TextView
                android:id="@+id/tv_type4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x8"
                android:text="退款说明"
                android:textColor="#99000000"
                android:textSize="@dimen/x14" />

            <TextView
                android:id="@+id/tv_tuihuo_more_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:layout_toRightOf="@id/tv_type4"
                android:lines="1"
                android:text="选填"
                android:textColor="#666666"
                android:textSize="@dimen/x12" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_back_money_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/x10"
        android:layout_marginBottom="@dimen/x80"
        android:background="@drawable/bind_phone_confirm_selector"
        android:gravity="center"
        android:text="提交审核"
        android:textColor="#ffffff"
        android:textSize="@dimen/x14" />

</LinearLayout>
