<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x82"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x2"
        android:layout_marginTop="@dimen/x6">

        <ImageView
            android:id="@+id/iv_order_all_img"
            android:layout_width="@dimen/x74"
            android:layout_height="@dimen/x74"
            android:layout_centerVertical="true"
            android:src="@mipmap/juyoub_icon" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/iv_order_all_img"
            android:layout_toRightOf="@id/iv_order_all_img"
            android:paddingLeft="@dimen/x8">

            <TextView
                android:id="@+id/tv_suning_order_part_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x3"
                android:singleLine="true"
                android:text="Haier/海尔 BCD-572WDENU1无霜对开门双门冰箱"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/x12" />

            <LinearLayout
                android:id="@+id/ll_order_trade_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/tv_suning_order_part_title"
                android:layout_marginTop="@dimen/x6"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/tv_order_all_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="订单号：4444*********8788"
                    android:textColor="#808080"
                    android:textSize="@dimen/x10" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="（长按订单号复制）"
                    android:textColor="#ff6600"
                    android:textSize="@dimen/x10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x6"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_all_statue"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x18"
                    android:background="@drawable/suning_order_part_state_orange"
                    android:gravity="center"
                    android:text="结算"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/x10" />

                <TextView
                    android:id="@+id/tv_order_all_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:text="下单时间：2017-10-25 T 21:20:09"
                    android:textColor="#b3b3b3"
                    android:textSize="@dimen/x10" />

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x6"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginBottom="@dimen/x6"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单金额："
            android:textColor="#808080"
            android:textSize="@dimen/x10" />

        <TextView
            android:id="@+id/tv_order_all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ¥99.88"
            android:textColor="#3d3d3d"
            android:textSize="@dimen/x12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="赚："
            android:textColor="#808080"
            android:textSize="@dimen/x10" />

        <TextView
            android:id="@+id/tv_order_zhuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ¥99.88"
            android:textColor="#3d3d3d"
            android:textSize="@dimen/x12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x8"
        android:background="#eeeeee" />

</LinearLayout>