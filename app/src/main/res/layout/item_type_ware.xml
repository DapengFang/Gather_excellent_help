<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#22000000"/>
      <LinearLayout
          android:id="@+id/ll_type_ware"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_vertical">

          <RelativeLayout
              android:layout_width="@dimen/x80"
              android:layout_height="@dimen/x80">
              <ImageView
                  android:id="@+id/iv_type_img"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:src="@mipmap/juyoub_icon"/>
              <TextView
                  android:id="@+id/tv_type_second_coupons"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="领取优惠券"
                  android:textSize="12sp"
                  android:textColor="@color/white"
                  android:gravity="center"
                  android:paddingLeft="@dimen/x3"
                  android:paddingRight="@dimen/x3"
                  android:background="@drawable/juxin_coupons"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentBottom="true"/>
          </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/x5"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长虹空调KFR-52LW/DAW1+1大2匹节能静音艺术柜"
            android:textSize="12sp"
            android:textColor="#99000000"/>

        <TextView
            android:id="@+id/tv_type_ware_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="到手价：￥5623.00"
            android:textColor="#99ff0000"
            android:layout_marginTop="@dimen/x2"/>
        <TextView
            android:id="@+id/tv_type_ware_coast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="到手价：￥5623.00"
            android:textColor="#99ff0000"/>
        <TextView
            android:id="@+id/tv_type_ware_aprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="到手价：￥5623.00"
            android:textColor="#99000000"/>
        <TextView
            android:id="@+id/tv_type_ware_coupons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领券立减200"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center"
            android:background="@drawable/type_xiadan_bg"/>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>