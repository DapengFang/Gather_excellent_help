<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x120"
    android:gravity="center">
    <ImageView
        android:id="@+id/iv_first_buy_small"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ware_rush"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x3"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_first_small_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KFR454545-554EW/DSSD"
            android:textSize="12sp"
            android:textColor="#99000000"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10">
            <ImageView
                 android:id="@+id/iv_first_mall_bg"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x10"
                android:src="@drawable/qianggou_bg"/>
            <ImageView
                android:id="@+id/iv_first_mall_progress"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x10"
                android:src="@drawable/qianggou_progress"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:text="30%"
                android:textColor="#55ff0000"
                android:layout_marginLeft="@dimen/x70"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已抢20件"
                android:textSize="9sp"
                android:textColor="#99ff0000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x3"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_first_small_coupons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领券立减200"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/type_xiadan_bg"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_first_small_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥3900.00"
                android:textSize="12sp"
                android:textColor="#99ff0000"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_first_small_zhuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赚：￥106.89 成本：￥3092.11"
            android:textSize="10sp"
            android:textColor="#99ff0000"/>
        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x16"
            android:background="@drawable/quick_buy"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/x3"
            android:layout_marginRight="@dimen/x3"/>
    </LinearLayout>

</LinearLayout>