<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">
    <include layout="@layout/gray_line9"/>
    <include layout="@layout/component_zera_title"/>
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/x1"
    android:background="#22000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_group_big"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x100">

                    <ImageView
                        android:id="@+id/iv_group_big_pic"
                        android:layout_width="@dimen/x100"
                        android:layout_height="@dimen/x100"
                        android:src="@drawable/big_ware_group"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/tv_group_big_second_coupons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="领取优惠券"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:paddingLeft="@dimen/x3"
                        android:paddingRight="@dimen/x3"
                        android:background="@drawable/juxin_coupons"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_group_big_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUX/奥克斯"
                    android:textSize="12sp"
                    android:textColor="#99000000"
                    android:layout_marginTop="@dimen/x3"
                    android:padding="@dimen/x3"/>

                <TextView
                    android:id="@+id/tv_group_big_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日特价2599.00"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:background="@drawable/home_price_bg"
                    android:layout_marginTop="@dimen/x3"
                    android:paddingLeft="@dimen/x3"
                    android:paddingRight="@dimen/x7"
                    android:layout_marginLeft="@dimen/x5"/>
                <TextView
                    android:id="@+id/tv_home_group_zhuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赚:￥106.89  成本:￥3092.11"
                    android:textColor="#99ff0000"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/tv_home_group_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="领券立减200"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/x2"
                    android:background="@drawable/type_xiadan_bg"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5"
                android:background="#00000000"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#22000000"/>
            <RelativeLayout
                android:id="@+id/rl_group_left"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <include layout="@layout/item_group_mall_zera"/>

            </RelativeLayout>
        </LinearLayout>
<View
    android:layout_width="@dimen/x1"
    android:layout_height="match_parent"
    android:background="#22000000"/>
        <LinearLayout
            android:id="@+id/ll_group_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <include layout="@layout/item_group_mall_zera"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#22000000"/>
            <include layout="@layout/item_group_mall_zera"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#22000000"/>
            <include layout="@layout/item_group_mall_zera"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>