<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x48"
                android:background="#fa2d3b"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeff0000">

                    <RelativeLayout
                        android:id="@+id/rl_exit"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:id="@+id/iv_zhuangtai_exit"
                            android:layout_width="@dimen/x15"
                            android:layout_height="@dimen/x15"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x7"
                            android:src="@drawable/white_left_arraw" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_top_title_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="设置"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x12" />
                    <RelativeLayout
                        android:id="@+id/rl_share"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_zhuangtai_share"
                            android:layout_width="@dimen/x15"
                            android:layout_height="@dimen/x15"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x7"
                            android:src="@drawable/white_point" />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <EditText
            android:id="@+id/et_sousuo"
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/x28"
            android:hint="请输入你需要搜索的商品"
            android:textSize="14sp"
            android:textColor="#99000000"
            android:inputType="text"
            android:background="@drawable/gray_sousuo_stroke_shape"
            android:padding="@dimen/x3"/>

        <TextView
            android:id="@+id/tv_type_search"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x28"
            android:text="搜索"
            android:drawableLeft="@drawable/taobao_sousou_white"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@drawable/register_textcolor_confirm_selector"
            android:background="@drawable/red_sousuo_bg_shape"
            android:layout_marginLeft="@dimen/x10"
            android:padding="@dimen/x5"/>

    </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_type_sousuo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x50"
                android:background="#f2f2f2">
                <LinearLayout
                    android:layout_width="@dimen/x240"
                    android:layout_height="@dimen/x26"
                    android:background="@drawable/type_sosuo_white_troke"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="@dimen/x18"
                        android:layout_height="@dimen/x18"
                        android:src="@drawable/type_sousuo_shape"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="输入商品搜索"
                        android:textSize="@dimen/x12"
                        android:textStyle="bold"
                        android:textColor="#dcdcdc"
                        android:layout_marginLeft="@dimen/x3"/>

                </LinearLayout>

            </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x3"
        android:background="#EFEFEF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ExpandableListView
            android:id="@+id/cus_list_navigator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"
            android:background="#f2f2f2"></ExpandableListView>
        <View
            android:layout_width="@dimen/x2"
            android:layout_height="match_parent"
            android:background="#f2f2f2"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_type_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:id="@+id/ll_type_loadmore"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="#88000000"
                android:gravity="center"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载更多..."
                    android:textColor="#ffffff"
                    android:textSize="14sp"/>

            </LinearLayout>

        </RelativeLayout>

        </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>