<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <include layout="@layout/top_zhuangai_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_sousuo"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x28"
            android:hint="请输入你需要搜索的商品"
            android:textSize="14sp"
            android:textColor="#99000000"
            android:inputType="text"
            android:background="@drawable/gray_sousuo_stroke_shape"
            android:padding="@dimen/x3"/>

        <TextView
            android:id="@+id/tv_type_search"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x28"
            android:text="搜索"
            android:drawableLeft="@drawable/black_sousuo"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@drawable/register_textcolor_confirm_selector"
            android:background="@drawable/red_sousuo_bg_shape"
            android:layout_marginLeft="@dimen/x10"
            android:padding="@dimen/x5"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="#22000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ExpandableListView
            android:id="@+id/cus_list_navigator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none"></ExpandableListView>
        <View
            android:layout_width="@dimen/x2"
            android:layout_height="match_parent"
            android:background="#22000000"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_type_show"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>