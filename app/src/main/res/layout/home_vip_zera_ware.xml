<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_vip_zera_ware"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/iv_vip_ware_img"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/tv_vip_ware_coupon"
            android:layout_width="@dimen/x43"
            android:layout_height="@dimen/x10"
            android:layout_alignRight="@+id/iv_vip_ware_img"
            android:layout_alignTop="@id/iv_vip_ware_img"
            android:background="@drawable/juxing_coupon_shape"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/x6"
            android:textStyle="bold" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x6"
        android:paddingRight="@dimen/x6"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_vip_ware_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:lineSpacingExtra="@dimen/x3"
                android:textColor="#333333"
                android:textSize="@dimen/x12" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="付款价"
                android:textColor="#808080"
                android:textSize="@dimen/x10" />

            <TextView
                android:id="@+id/tv_vip_ware_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="#fa2a3b"
                android:layout_marginLeft="@dimen/x2"
                android:textSize="@dimen/x14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_vip_zera_zhuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_vip_ware_coast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="#474747"
                android:textSize="@dimen/x10"
                android:layout_marginTop="@dimen/x4"/>

            <TextView
                android:id="@+id/tv_vip_ware_zhuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textColor="#ff6600"
                android:textSize="@dimen/x10"
                android:layout_marginTop="@dimen/x4"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>