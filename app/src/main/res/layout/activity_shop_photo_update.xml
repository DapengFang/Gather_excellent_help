<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gather_excellent_help.ui.activity.shop.ShopPhotoUpdateActivity">

    <include layout="@layout/top_zhuangai_bar" />

    <com.gather_excellent_help.ui.widget.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/x7"
                    android:text="门头照片"
                    android:textColor="#99000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_merchant_choice1"
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="@dimen/x7"
                    android:background="@drawable/item_merchant_choicepic_shape"
                    android:gravity="center"
                    android:text="选择图片"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#11000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/iv_merchant_picture_l1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/x5"
                    android:src="@mipmap/merchant_default_s2"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/x7"
                    android:text="店铺产品陈列照片"
                    android:textColor="#99000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_merchant_choice2"
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="@dimen/x7"
                    android:background="@drawable/item_merchant_choicepic_shape"
                    android:gravity="center"
                    android:text="选择图片"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#11000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_merchant_picture_l2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/x5"
                    android:layout_weight="1"
                    android:src="@mipmap/merchant_default_s1"/>

                <ImageView
                    android:id="@+id/iv_merchant_picture_l3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/x5"
                    android:layout_weight="1"
                    android:src="@mipmap/merchant_default_s1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/x7"
                    android:text="营业执照"
                    android:textColor="#99000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_merchant_choice3"
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/x30"
                    android:layout_marginRight="@dimen/x7"
                    android:background="@drawable/item_merchant_choicepic_shape"
                    android:gravity="center"
                    android:text="选择图片"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#11000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x150"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/iv_merchant_picture_l4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/x5"
                    android:src="@mipmap/merchant_default_s2"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_merchant_last_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x70"
                android:layout_marginBottom="@dimen/x60"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:text="下一步"
                android:textSize="@dimen/x16"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/red_button_circle_selector"/>

        </LinearLayout>

    </com.gather_excellent_help.ui.widget.MyNestedScrollView>

</LinearLayout>
