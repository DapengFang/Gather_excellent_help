<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_l02"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gather_excellent_help.ui.activity.test.TestActivity_l02">

    <include layout="@layout/top_new_zhuangai_bar" />

    <RelativeLayout
        android:id="@+id/rl_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0f0">

        <RadioGroup
            android:id="@+id/rg_top_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x42"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x3"
            android:layout_marginRight="@dimen/x3"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_first"
                style="@style/top_account_tag_style"
                android:text="近一周" />

            <RadioButton
                android:id="@+id/rb_second"
                style="@style/top_account_tag_style"
                android:text="近一月" />

            <RadioButton
                android:id="@+id/rb_third"
                style="@style/top_account_tag_style"
                android:text="近三月" />

            <RadioButton
                android:id="@+id/rb_four"
                style="@style/top_account_tag_style"
                android:text="定义时间" />

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:padding="@dimen/x10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="操作时间"
            android:textColor="#333333"
            android:textSize="@dimen/x12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="操作项目"
            android:textColor="#333333"
            android:textSize="@dimen/x12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="对应金额"
            android:textColor="#333333"
            android:textSize="@dimen/x12" />

    </RelativeLayout>

    <com.gather_excellent_help.ui.widget.WanRecycleView
        android:id="@+id/wan_account_new_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
