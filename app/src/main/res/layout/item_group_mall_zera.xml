<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="@dimen/x115"
android:orientation="horizontal">
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:orientation="vertical"
    android:gravity="center_vertical">
    android:src="@drawable/big_ware_group"/>
    <TextView
        android:id="@+id/tv_group_mall_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUX/奥克斯"
        android:textSize="12sp"
        android:textColor="#99000000"
        android:layout_marginTop="@dimen/x3"
        android:padding="@dimen/x3"/>
    <TextView
        android:id="@+id/tv_group_mall_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日特价2599.00"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:background="@drawable/home_price_bg"
        android:layout_marginTop="@dimen/x3"
        android:layout_marginLeft="@dimen/x3"
        android:paddingLeft="@dimen/x3"
        android:paddingRight="@dimen/x7"
        />

    <TextView
        android:id="@+id/tv_group_small_zhuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赚:￥106.89"
        android:textColor="#99ff0000"
        android:textSize="10sp"
        android:paddingLeft="@dimen/x3"
        android:layout_marginTop="@dimen/x2"/>
    <TextView
        android:id="@+id/tv_group_small_coast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成本:￥3092.11"
        android:textColor="#99ff0000"
        android:textSize="10sp"
        android:paddingLeft="@dimen/x3"
        android:layout_marginTop="@dimen/x2"/>
    <TextView
        android:id="@+id/tv_group_small_coupons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="领券立减200"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="@dimen/x2"
        android:background="@drawable/type_xiadan_bg"/>

</LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_group_mall_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ware_rush"/>
        <TextView
            android:id="@+id/tv_group_small_second_coupons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="领取优惠券"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="@dimen/x3"
            android:background="@drawable/juxin_coupons"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x3"/>
    </RelativeLayout>

</LinearLayout>